@model IEnumerable<AbacusApp3.Models.Lokalizacja>


@{
    ViewData["Title"] = "Index";
}

<h2>Lokalizacje</h2>

<p>
    <a asp-action="Create">Dodaj nową lokalizację</a>
</p>
<div class="card">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Akcje</th>
                <th>
                    @Html.DisplayNameFor(model => model.NazwaLok)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ulica)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NrDomu)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NrLokalu)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.KodPocztowy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Miejscowosc)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.LokalizacjaId"><i class="mdi mdi-grease-pencil fa-2x text-success" title="Edycja"></i></a>
                        |
                        <a asp-action="Details" asp-route-id="@item.LokalizacjaId"><i class="mdi mdi-eye fa-2x text-warning" title="Szczegóły / podgląd"></i></a>
                        |
                        <a asp-action="Delete" asp-route-id="@item.LokalizacjaId"><i class="mdi mdi-delete fa-2x text-danger" title="Usuń"></i></a>

                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.NazwaLok)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ulica)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NrDomu)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NrLokalu)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.KodPocztowy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Miejscowosc)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
