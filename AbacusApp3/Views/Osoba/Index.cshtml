@model IEnumerable<AbacusApp3.Models.Osoba>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Akcje</th>
            <th>
                @Html.DisplayNameFor(model => model.Imie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nazwisko)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pesel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DokumentTozsamosci)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lokalizacja)
            </th>

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OsobaId"><i class="mdi mdi-grease-pencil fa-2x text-success" title="Edycja"></i></a>
                |
                <a asp-action="Details" asp-route-id="@item.OsobaId"><i class="mdi mdi-eye fa-2x text-warning" title="Szczegóły / podgląd"></i></a>
                |
                <a asp-action="Delete" asp-route-id="@item.OsobaId"><i class="mdi mdi-delete fa-2x text-danger" title="Usuń"></i></a>

            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Imie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nazwisko)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pesel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DokumentTozsamosci)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lokalizacja.LokalizacjaId)
            </td>
        </tr>
}
    </tbody>
</table>
