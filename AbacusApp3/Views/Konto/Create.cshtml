@model AbacusApp3.Models.Konto

@{
    ViewData["Title"] = "Create";
}

<h2>Konta</h2>

<div class="card">
    <h4>Utwórz</h4>
    <hr />

        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="NazwaKonta" class="control-label"></label>
                    <input asp-for="NazwaKonta" class="form-control" />
                    <span asp-validation-for="NazwaKonta" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Powrót do listy</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
