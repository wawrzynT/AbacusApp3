@model AbacusApp3.Models.Konto

@{
    ViewData["Title"] = "Edit";
}

<h2>Konta</h2>

<div class="card">
    <h4>Edycja</h4>
    <hr />

        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="KontoId" />
                    <div class="form-group">
                        <label asp-for="NazwaKonta" class="control-label"></label>
                        <input asp-for="NazwaKonta" class="form-control" />
                        <span asp-validation-for="NazwaKonta" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Zapisz" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Powrót do listy</a>
        </div>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
