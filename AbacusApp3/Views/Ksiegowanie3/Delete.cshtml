@model AbacusApp3.Models.Ksiegowanie

@{
    ViewData["Title"] = "Delete";
}

<h2>Księgowanie</h2>

<div>
    <h4>Usuwanie wiersza</h4>
    <hr />
    <div class="card">
        <div class="m-3">
            <dl class="row">
                <div class="d-flex flex-column">
                    <div class="d-flex flex-row flex-nowrap">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Lokalizacja)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Lokalizacja.NazwaLok)
                        </dd>
                    </div>

                    <div class="d-flex flex-row flex-nowrap">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Konto)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Konto.NazwaKonta)
                        </dd>
                    </div>

                    <div class="d-flex flex-row flex-nowrap">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.TerminPlatnosci)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.TerminPlatnosci)
                        </dd>
                    </div>

                    <div class="d-flex flex-row flex-nowrap">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.KwotaWn)
                        </dt>
                        <dd class="col-sm-1" style="text-align: right">
                            @Html.DisplayFor(model => model.KwotaWn)
                        </dd>
                    </div>

                    <div class="d-flex flex-row flex-nowrap">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.KwotaWplaty)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.KwotaWplaty)
                        </dd>
                    </div>

                    <div class="d-flex flex-row flex-nowrap">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.KwotaMa)
                        </dt>
                        <dd class="col-sm-1" style="text-align: right">
                            @Html.DisplayFor(model => model.KwotaMa)
                        </dd>
                    </div>
                </div>
            </dl>
        </div>
    </div>
        <hr />
        <h5>Czy jesteś pewien, że chcesz usunąć wpis?</h5>
        <hr />
 
    <form asp-action="Delete">
        <input type="hidden" asp-for="KsiegowanieId" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Powrót do listy</a>
    </form>
</div>
